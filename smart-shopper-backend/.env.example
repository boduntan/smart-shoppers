# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/staples_smart_shopper

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Elasticsearch Configuration (optional)
ELASTICSEARCH_URL=http://localhost:9200

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=staples-products

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Analytics
ANALYTICS_ENABLED=true

# Staples API Configuration (if available)
STAPLES_API_BASE_URL=https://api.staples.ca
STAPLES_API_KEY=your_staples_api_key_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Integrated frontend (docker-compose-integrated) - set when accessing app by IP/hostname
# Frontend URL as seen by the browser (for CORS). Example: http://3.98.130.26:8080
CORS_ORIGIN=
# API URL as seen by the browser (baked into frontend at build time). Example: http://3.98.130.26:3000/api
VITE_API_BASE_URL=
