# Development environment variables
NODE_ENV=development
PORT=3000

# Database - Azure PostgreSQL (use environment-specific values)
DATABASE_URL=$DATABASE_URL

# Redis - Azure Redis Cache (use environment-specific values)
REDIS_URL=$REDIS_URL

# Elasticsearch (Optional)
ELASTICSEARCH_URL=http://localhost:9200

# OpenAI Configuration - REPLACE WITH YOUR ACTUAL KEYS
OPENAI_API_KEY=$OPENAI_API_KEY
OPENAI_MODEL=gpt-4o-mini

# Pinecone Configuration - REPLACE WITH YOUR ACTUAL KEYS
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=staples-products

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-please-change-this-in-production
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Analytics
ANALYTICS_ENABLED=true

# File Upload
MAX_FILE_SIZE=5242880

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001